<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="4dp">

        <TextView
            android:id="@+id/findSongMenuTitle"
            style="@style/MyMenuHeadingText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_arrow_up_drop_circle_outline_yellow_36dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/findnewsongs" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/closeOptionsFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:backgroundTint="@color/toolbar"
            app:fabSize="mini"
            app:borderWidth="0dp"
            app:elevation="0dp"
            android:src="@drawable/ic_arrow_right_white_36dp"
            android:contentDescription="@string/drawer_close" />

    </LinearLayout>

    <TextView
        android:id="@+id/menu_version_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyVersionText"/>

    <ScrollView
        android:id="@+id/optionschordsscrollview"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-32dp"
            android:layout_marginEnd="-32dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/ugSearchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_ultimateguitar_white_36dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/ultimateguitarsearch"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/chordieSearchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_chordie_white_36dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/chordiesearch"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/songselectSearchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_songselect_white_36dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/songselect"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/worshiptogetherSearchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_worshiptogether_white_36dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/worshiptogether"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/ukutabsSearchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_ukulele_white_36dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/ukutabs"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/worshipreadySearchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_worshipready_white_36dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/worshipready"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/holychordsSearchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_holychords_white_36dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/holychords"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/songImportButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_download_white_36dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/importnewsong"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/cameraButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_camera_white_36dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/camera"
                android:textColor="#fff"
                android:textSize="12sp" />
            <Button
                android:id="@+id/bandDownloadButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/menu_button"
                android:drawableStart="@drawable/ic_download_white_36dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/my_band"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/churchDownloadButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/menu_button"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/ic_download_white_36dp"
                android:gravity="center_vertical"
                android:text="@string/my_church"
                android:textColor="#fff"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>