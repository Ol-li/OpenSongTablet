<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/optionOtherTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_arrow_up_drop_circle_outline_yellow_36dp"
            android:gravity="center"
            android:text="@string/other"
            style="@style/MyMenuHeadingText" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/closeOptionsFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:backgroundTint="@color/toolbar"
            app:fabSize="mini"
            android:src="@drawable/ic_arrow_right_white_36dp"
            android:contentDescription="@string/drawer_close" />

    </LinearLayout>

    <TextView
        android:id="@+id/menu_version_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyVersionText"/>

    <ScrollView
        android:id="@+id/optionsotherscrollview"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
            android:id="@+id/otherHelpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_help_outline_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/help"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/otherTweetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_twitter_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/twitteruser"
            android:textColor="#fff"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/otherEmailButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_forum_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/forum"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/otherLanguageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_g_translate_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/language"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/otherStartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_exit_to_app_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/start_screen"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/otherRateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_thumbs_up_down_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/rate"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/otherPayPalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_papypal_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/paypal"
            android:textColor="#fff"
            android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>