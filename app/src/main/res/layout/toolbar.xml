<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="wrap_content"
    android:layout_height="?attr/actionBarSize"
    android:layout_alignParentTop="true"
    android:background="@color/toolbar"
    app:elevation="8dp"
    app:popupTheme="@style/ThemeOverlay.OpenSongApp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/action_search">

        <RelativeLayout
            android:id="@+id/songandauthor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/batteryholder"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:minWidth="90dp"
            android:singleLine="true">

            <TextView
                android:id="@+id/songtitle_ab"
                style="@style/MySongTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="0dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#fff"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/songkey_ab"
                style="@style/MySongTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/songtitle_ab"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#fff"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/songcapo_ab"
                style="@style/MySongTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/songkey_ab"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#fff"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/songauthor_ab"
                style="@style/MySongAuthorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/songtitle_ab"
                android:layout_alignParentStart="true"
                android:layout_margin="0dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#fff"
                tools:ignore="SmallSp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/batteryholder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_toStartOf="@+id/action_search"
            android:gravity=""
            android:minWidth="50dp"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/batteryimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/time" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/batterycharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxWidth="50dp"
                    android:text="99%"
                    android:textColor="#fff"
                    android:textSize="11sp"
                    tools:gravity="center"
                    tools:ignore="HardcodedText,SmallSp" />

                <TextView
                    android:id="@+id/digitalclock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:maxWidth="50dp"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:text="12:00"
                    android:textColor="#ffffff"
                    android:textSize="11sp"
                    tools:ignore="HardcodedText,SmallSp" />

            </LinearLayout>

        </RelativeLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginStart="14dp"
            android:layout_toStartOf="@+id/set_add"
            android:contentDescription="@string/action_search"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:src="@drawable/ic_music_note_white_36dp"
            app:backgroundTint="@android:color/transparent"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:fabSize="mini"
            app:rippleColor="@null" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/set_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/add_song_to_set"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:src="@drawable/ic_plus_white_36dp"
            app:backgroundTint="@android:color/transparent"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:fabSize="mini"
            app:rippleColor="@null" />

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>