<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/optionDisplayTitle"
            style="@style/MyMenuHeadingText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_arrow_up_drop_circle_outline_yellow_36dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/display" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/closeOptionsFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:backgroundTint="@color/toolbar"
            app:fabSize="mini"
            app:borderWidth="0dp"
            app:elevation="0dp"
            android:src="@drawable/ic_arrow_right_white_36dp"
            android:contentDescription="@string/drawer_close" />

    </LinearLayout>

    <TextView
        android:id="@+id/menu_version_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyVersionText"/>

    <ScrollView
        android:id="@+id/optionsdisplayscrollview"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
            android:id="@+id/displayThemeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_theme_light_dark_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/choose_theme"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/displayFontButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_format_text_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/choose_fonts"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/song_separator_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/song" />

        <Button
            android:id="@+id/displayAutoScaleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_arrow_expand_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/autoscale_toggle"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/displayInfoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_information_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/extra"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/gesturesScrollButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_arrow_down_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/scrollbuttons"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/button_separator_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/custom" />

        <Button
            android:id="@+id/displayButtonsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_bullseye_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/pagebuttons"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/gesturesCustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_fingerprint_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/custom_gestures"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/displayActionBarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_menu_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/actionbar"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/gesturesMenuOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_menuswipe_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/menu_settings"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/displayPopUpsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_settings_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/display_popups"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/gesturesSongSwipeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_swipe_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/swipe"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/gesturesPedalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_pedal_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/footpedal"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dsiplay_separator_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/connected_display" />

        <Button
            android:id="@+id/displayConnectedDisplayButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_monitor_multiple_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/connected_display"
            android:textColor="#fff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/displayHDMIButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/ic_monitor_multiple_white_36dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/hdmi"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_margin="2dp" />

    </LinearLayout>
    </ScrollView>

</LinearLayout>