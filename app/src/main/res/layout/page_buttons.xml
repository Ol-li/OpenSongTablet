<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rightbar"
    android:layout_alignParentEnd="true">

    <ScrollView
        android:id="@+id/extrabuttons2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/custom1ButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/custom1Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/custom"
                    app:elevation="0dp"
                    android:src="@drawable/ic_help_outline_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/custom2ButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/custom2Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/custom"
                    app:elevation="0dp"
                    android:src="@drawable/ic_help_outline_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/custom3ButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/custom3Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/custom"
                    app:elevation="0dp"
                    android:src="@drawable/ic_help_outline_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/custom4ButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/custom4Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/custom"
                    app:elevation="0dp"
                    android:src="@drawable/ic_help_outline_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/extrabuttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/extrabuttons2"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/chordButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/chordButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/chords"
                    app:elevation="0dp"
                    android:src="@drawable/ic_guitar_electric_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linkButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/linkButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/link"
                    app:elevation="0dp"
                    android:src="@drawable/ic_link_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/stickyButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="-30dp"
                android:orientation="vertical">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/stickyButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/stickynotes"
                    app:elevation="0dp"
                    android:src="@drawable/ic_comment_text_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/notationButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/notationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/music_score"
                    app:elevation="0dp"
                    android:src="@drawable/ic_clef_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/highlightButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/highlightButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/highlight"
                    android:src="@drawable/ic_highlighter_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pageselectButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/pageselectButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/pdf_selectpage"
                    android:src="@drawable/ic_book_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/mainbuttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|top"
        android:layout_toEndOf="@id/extrabuttons"
        tools:ignore="UselessParent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="end">

            <RelativeLayout
                android:id="@+id/setButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/setButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/set"
                    android:src="@drawable/ic_format_list_numbers_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/padButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/padButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/pad_onoroff"
                    android:src="@drawable/ic_amplifier_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/autoscrollButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/autoscrollButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/autoscroll"
                    android:src="@drawable/ic_rotate_right_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/metronomeButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/metronomeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/metronome"
                    android:src="@drawable/ic_pulse_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/chordButton_ungroupedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/chordButton_ungrouped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/chords"
                    android:src="@drawable/ic_guitar_electric_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linkButton_ungroupedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/linkButton_ungrouped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/link"
                    android:src="@drawable/ic_link_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/stickyButton_ungroupedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/stickyButton_ungrouped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/stickynotes"
                    android:src="@drawable/ic_comment_text_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/notationButton_ungroupedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/notationButton_ungrouped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/music_score"
                    android:src="@drawable/ic_clef_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/highlightButton_ungroupedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/highlightButton_ungrouped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/highlight"
                    android:src="@drawable/ic_highlighter_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pageselectButton_ungroupedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/pageselectButton_ungrouped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/pdf_selectpage"
                    android:src="@drawable/ic_book_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/extraButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/extraButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/extra"
                    android:src="@drawable/ic_information_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/custom1Button_ungroupedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/custom1Button_ungrouped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/custom"
                    android:src="@drawable/ic_help_outline_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/custom2Button_ungroupedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/custom2Button_ungrouped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/custom"
                    android:src="@drawable/ic_help_outline_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/custom3Button_ungroupedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/custom3Button_ungrouped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/custom"
                    android:src="@drawable/ic_help_outline_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/custom4Button_ungroupedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/custom4Button_ungrouped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/custom"
                    android:src="@drawable/ic_help_outline_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/customButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/customButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/custom"
                    android:src="@drawable/ic_bullseye_white_36dp"
                    app:useCompatPadding="true" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>