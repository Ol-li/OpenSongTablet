<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:background="@drawable/popup_bg"
    android:padding="8dp"
    android:visibility="visible">

    <FrameLayout
        android:id="@+id/myTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <include layout="@layout/popup_dialogtitle"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myTitle"
        android:layout_marginTop="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                style="@style/MyHeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/transparency" />

            <SeekBar
                android:id="@+id/popupAlpha_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/apptheme_scrubber_primary_holo"
                android:max="4"
                android:progress="3"
                android:progressDrawable="@drawable/apptheme_scrubber_secondary_holo"
                android:thumb="@drawable/apptheme_scrubber_control_normal_holo_bright" />

            <TextView
                style="@style/MyHeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"
                android:text="@string/size" />

            <SeekBar
                android:id="@+id/popupScale_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/apptheme_scrubber_primary_holo"
                android:max="7"
                android:progress="5"
                android:progressDrawable="@drawable/apptheme_scrubber_secondary_holo"
                android:thumb="@drawable/apptheme_scrubber_control_normal_holo_bright" />

            <TextView
                style="@style/MyHeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"
                android:text="@string/dim" />

            <SeekBar
                android:id="@+id/popupDim_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/apptheme_scrubber_primary_holo"
                android:max="10"
                android:progress="7"
                android:progressDrawable="@drawable/apptheme_scrubber_secondary_holo"
                android:thumb="@drawable/apptheme_scrubber_control_normal_holo_bright" />

            <TextView
                style="@style/MyHeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"
                android:text="@string/position" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="0.9">

                    <Button
                        android:id="@+id/tl_button"
                        style="?android:attr/buttonBarStyle"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/grey_button"
                        android:text="."
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/tc_button"
                        style="?android:attr/buttonBarStyle"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/grey_button"
                        android:text="."
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/tr_button"
                        style="?android:attr/buttonBarStyle"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/grey_button"
                        android:text="."
                        tools:ignore="HardcodedText" />
                </TableRow>

                <TableRow
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="0.9">

                    <Button
                        android:id="@+id/l_button"
                        style="?android:attr/buttonBarStyle"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/grey_button"
                        android:text="."
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/c_button"
                        style="?android:attr/buttonBarStyle"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/grey_button"
                        android:text="."
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/r_button"
                        style="?android:attr/buttonBarStyle"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/grey_button"
                        android:text="."
                        tools:ignore="HardcodedText" />

                </TableRow>

                <TableRow
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="0.9">

                    <Button
                        android:id="@+id/bl_button"
                        style="?android:attr/buttonBarStyle"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/grey_button"
                        android:text="."
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/bc_button"
                        style="?android:attr/buttonBarStyle"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/grey_button"
                        android:text="."
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/br_button"
                        style="?android:attr/buttonBarStyle"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/grey_button"
                        android:text="."
                        tools:ignore="HardcodedText" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>